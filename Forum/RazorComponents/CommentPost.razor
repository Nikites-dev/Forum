@using Forum.Services
@inject BehaviourService BehaviourService

<div hidden="@BehaviourService.isShowCommentContent" class="background">
    <div class="field">
        <div class="content1">
            <p>Header</p>
            <button @onclick="@ShowCheck">Close</button>
        </div>
        
        
        <div class="content2">
            <div class="card">
                <div class="postCard">
                    <div class="leftSide">
                        @if (@PostChoose.Likes != null)
                        {
                            <p>@PostChoose.Likes.Count</p>
                        }
                        else
                        {
                            <p>0</p>
                        }

                    </div>
    
                    <div class="rightSide">
                        <div class="rowCard">
                            @* <p>@PostChoose.Username.ToString() * </p> *@
                            <p> posted by  @PostChoose.CreatePost.ToString()</p>
                        </div>
                        <div class="rowCard">
                            <p>@PostChoose.Text</p>
                        </div>
                        <div class="rowCard">
                            @if (@PostChoose.Comments != null)
                            {
                                <button>@PostChoose.Comments.Count.ToString() Comments</button>
                            }
                        </div>
                    </div>
                </div>
               
            </div>
            
             <CreateComment CurrentPost="PostChoose"/>
            
             <div>
                 @if (@PostChoose.Comments != null)
                 {
                     @foreach (var comment in @PostChoose.Comments)
                     {
                         <div class="commentField">
                             <p>@comment.UserId.ToString()</p>
                             <p>@comment.Text</p>
                             <p>@comment.Rating</p>
                         </div>
                     }   
                 }
             </div>
             
        </div>
        
    </div>
</div>

@code {

   
    
    [Parameter]
    public Post PostChoose { get; set; }
    
    // [Parameter]
    // public bool HiddenContent { get; set; }

    
    
    void ShowCheck()
    {
        BehaviourService.isShowCommentContent = true;
        StateHasChanged();
    }
}